%h1 Listing likes

%table{id:"liketable",class:'table table-striped table-sm'}
  %thead
    %tr
      %th User_email
      %th Post_msg
      %th showbutton
      %th editbutton
      %th destroybutton

  %tbody
    - @likes.each do |like|
      %tr
        %td= like.user.email
        %td= like.post.msg
        %td= link_to 'Show', like
        %td= link_to 'Edit', edit_like_path(like)
        %td= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Like', new_like_path

:javascript
  $(document).ready(function(){
    $('#liketable').DataTable();
  });

