%h1 Listing follows

%table{id:"followtable",class:'table table-striped table-sm'}
  %thead
    %tr
      %th Follower_id
      %th Followee_id
      %th showbutton
      %th editbutton
      %th destroybutton

  %tbody
    - @follows.each do |follow|
      %tr
        %td= follow.follower.name
        %td= follow.followee.name
        %td= link_to 'Show', follow
        %td= link_to 'Edit', edit_follow_path(follow)
        %td= link_to 'Destroy', follow, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Follow', new_follow_path
:javascript
  $(document).ready(function(){
    $('#followtable').DataTable();
  });